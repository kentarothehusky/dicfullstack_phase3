<!DOCTYPE html>
<html>
  <head>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= csrf_meta_tags %>
  </head>

<body>
  
    <header>
      <nav class="navbar navbar-default sample">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
            <span class="sr-only">Bootstrap</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">menu</a>
        </div>
      <div id="gnavi" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <% if logged_in? %>
            <li><%= link_to_unless_current "Profile", user_path(current_user.id) %></li>
            <li><%= link_to_unless_current "index", blogs_path %></li>
            <li><%= link_to "new", new_blog_path%></li>
            <li><%= link_to_unless_current "favorites", favorites_path(current_user.id) %></li>
            <li><%= link_to_unless_current "Logout", session_path(current_user.id), method: :delete %></li>
          <% else %>
            <li><%= link_to "Sign up", new_user_path %></li>
            <li><%= link_to "Login", new_session_path %></li>
          <% end %>
            
          <% flash.each do |key, value| %>
            <%= content_tag(:div, value, class: "#{key}") %>
          <% end %>
        </ul>
      </div>
    </nav>

    <title>ニャンスタグラム</title>
    <div class="jumbotron">
      <h1>Nyanstagram</h1>
      <p>   </p>
      <!--<p><a class="btn btn-primary btn-lg" href="blogs#new" role="button">New Post</a></p>-->
    </div>
    
  </header>

<div class="wrapper">
  <ul class="col-xs-12 col-md-12 test"><%= yield %></ul>
</div>


  <div class= "footer">  
    <footer>
      <p>@2018 nyanstagram</p>
    </footer>
  </div>
</body>  
</html>
