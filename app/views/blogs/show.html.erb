<h1>ブログ詳細画面</h1>
<p>ユーザー: <%= @blog.user.name %></p>
<p>タイトル: <%= @blog.title %></p>
<p>内容: <%= @blog.content %></p>
  
<p id="notice"><%= notice %></p>

<p>
  <strong>Image:</strong>
  <%= image_tag @blog.image %>
</p>

<%= link_to 'Edit', edit_blog_path(@blog) %> |
<%= link_to 'Back', blogs_path %>

<% unless @blog.user_id == current_user %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(blog_id: @blog.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(blog_id: @blog.id), method: :post, class: 'btn btn-prymary' %>
  <% end %>
<% end %>


