<h3>以下の内容で、送信する。</h3>

<%= form_for(@blog) do |f| %>
  <%= f.hidden_field :title %>
  <%= f.hidden_field :content %>
  <p>タイトル:<%= @blog.title %></p>
  <p>本文:<%= @blog.content %></p>
  <%= f.submit "登録する" %>
<% end %>

<%= form_for(@blog, url: new_blog_path, method: 'get') do |f| %>
  <%= f.hidden_field :title %>
  <%= f.hidden_field :content %>
  <%= f.submit "もどる" %>
  
<%= hidden_field_tag :"cache[image]",@blog.image.cache_name %>
<%= image_tag(@blog.image) %>

<% end %>